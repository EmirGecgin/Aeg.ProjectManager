@model IEnumerable<Aeg.ProjectManager.Models.Personel.Personel>

@{
    ViewBag.Title = "PersonelContact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="card card-solid" >
        <div class="card-body pb-0" >
            <div class="row d-flex align-items-stretch">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch mb-4">
                        <div class="card bg-light">
                            <div class="card-header text-muted border-bottom-0">
                               
                                @item.Department
                            </div>
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-7">
                                        <h2 class="lead"><b>@item.NameSurname</b></h2>
                                        <p class="text-muted text-sm"><b>About: </b> @item.Duty  </p>
                                        <ul class="ml-4 mb-0 fa-ul text-muted">
                                            <li class="small"><span class="fa-li"><i class="bx bx-map"></i></span> Address: @item.Address</li>
                                            <li class="small"><span class="fa-li"><i class="bx bx-phone"></i></span> Phone: @item.Phone</li>
                                            <li class="small"><span class="fa-li"><i class="bx bx-envelope"></i></span> Mail: @item.email</li>
                                        </ul>
                                    </div>
                                    <div class="col-5 text-center">
                                        <img src="@item.PersonelImage" alt="" class="img-circle img-fluid rounded rounded-circle">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="text-right">
                                    <a href="tel:@item.Phone" class="btn btn-sm btn-primary">
                                        <i class="bx bx-phone"></i>Ara
                                    </a>
                                    <a href="mailto:@item.email" class="btn btn-sm btn-primary">
                                        <i class="bx bx-envelope"></i> Mail At
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>